	\setbeamercolor{background canvas}{bg=UniPDRed}
	\begin{frame}[plain, noframenumbering]
		
		% UniPD
		\begin{textblock*}{1cm}(0cm,-7.5cm)
			\rule{2cm}{7.5cm}
			\includegraphics[scale=0.75]{theme/unipd-logo}
		\end{textblock*}
		
		\vspace{1cm}
		\begin{center}
			{\fontsize{20pt}{15pt}\selectfont\textsc{Thank you for allowing me to \\ taint your precious time!}}
		\end{center}
		
		% Dipartimento di matematica
		\begin{textblock*}{1cm}(9cm,7.3cm)
			%\rule{2cm}{7.5cm}
			\includegraphics[scale=0.2]{theme/math_unipd}
		\end{textblock*}
	\end{frame}
}

\mode
<all>
